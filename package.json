{
  "name": "@adobe/helix-cli",
  "version": "4.9.9",
  "description": "Project Helix CLI",
  "main": "index.js",
  "bin": {
    "hlx": "./index.js"
  },
  "scripts": {
    "check": "npm run lint && npm run test",
    "test": "nyc --lines 90 --reporter=text --reporter=lcov mocha -t 5000",
    "test-ci": "circleci tests glob 'test/test*.js' | circleci tests split --split-by=timings | xargs nyc --reporter=text --reporter=lcov mocha -R mocha-junit-reporter -t 5000 && codecov",
    "lint": "./node_modules/.bin/eslint .",
    "lint-ci": "circleci tests glob 'src/**/*.js' 'test/**/*.js' | circleci tests split | xargs eslint",
    "semantic-release": "semantic-release",
    "commit": "git-cz",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/helix-cli"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/adobe/project-helix/issues"
  },
  "homepage": "https://github.com/adobe/project-helix#readme",
  "peerDependencies": {
    "isomorphic-git": "0.x || 1.x"
  },
  "engines": {
    "node": ">=8.9 <9.0 || >=10.0 < 20.19"
  },
  "dependencies": {
    "@adobe/fastly-native-promises": "^3.0.0",
    "@adobe/helix-pipeline": "18.0.14",
    "@adobe/helix-shared": "9.1.0",
    "@adobe/helix-simulator": "5.3.83",
    "@adobe/htlengine": "6.4.23",
    "@babel/core": "^7.5.5",
    "@parcel/logger": "^2.0.0",
    "@snyk/nodejs-runtime-agent": "^1.46.0",
    "archiver": "^7.0.0",
    "camelcase": "^8.0.0",
    "chalk": "5.3.0",
    "chokidar": "^4.0.0",
    "dotenv": "^16.0.0",
    "ferrum": "^1.1.1",
    "fs-extra": "^11.0.0",
    "glob": "^11.0.0",
    "glob-to-regexp": "0.4.1",
    "hyperscript": "^2.0.2",
    "ignore": "^6.0.0",
    "ini": "^5.0.0",
    "junit-report-builder": "5.1.1",
    "lodash": "^4.17.15",
    "mime-types": "^2.1.24",
    "object-hash": "^3.0.0",
    "open": "^10.0.0",
    "openwhisk": "^3.19.0",
    "parcel-bundler": "^1.12.3",
    "postcss": "^8.0.0",
    "postcss-url": "^10.0.0",
    "postcss-value-parser": "^4.0.0",
    "progress": "^2.0.3",
    "request": "^2.88.0",
    "request-promise-native": "1.0.7",
    "sanitizer": "^0.1.3",
    "semver": "^7.0.0",
    "shelljs": "^0.8.3",
    "snyk": "^1.195.1",
    "source-map": "^0.7.3",
    "uri-js": "^4.2.2",
    "uuid": "^10.0.0",
    "webpack": "^5.0.0",
    "yargs": "^17.0.0"
  },
  "devDependencies": {
    "@adobe/helix-testutils": "^0.2.0",
    "@pollyjs/adapter-fetch": "^6.0.0",
    "@pollyjs/adapter-node-http": "^6.0.0",
    "@pollyjs/core": "^6.0.0",
    "@pollyjs/persister-fs": "^6.0.0",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/git": "^10.0.0",
    "@semantic-release/github": "^11.0.0",
    "codecov": "^3.5.0",
    "commitizen": "^4.0.1",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^9.0.0",
    "eslint-config-airbnb": "^19.0.0",
    "eslint-plugin-header": "^3.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.2",
    "js-yaml": "^4.0.0",
    "jsdom": "^25.0.0",
    "lint-staged": "^15.0.0",
    "mocha": "^10.0.0",
    "mocha-junit-reporter": "^2.0.0",
    "mocha-parallel-tests": "^2.2.1",
    "nock": "^13.0.0",
    "nyc": "^17.0.0",
    "proxyquire": "^2.1.0",
    "semantic-release": "^24.0.0",
    "sinon": "^19.0.0",
    "unzip2": "^0.2.5"
  },
  "snyk": true,
  "lint-staged": {
    "*.js": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "renovate": {
    "extends": [
      "config:base"
    ],
    "schedule": "at 08:54 pm on Wednesday",
    "timezone": "Europe/Zurich",
    "packageRules": [
      {
        "packagePatterns": [".*"],
        "groupName": "any"
      }
    ]
  }
}
